@model IEnumerable<QL_BanSach.Models.NHAXUATBAN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <div class="content-header">
        <h2>Quản lý nhà xuất bản</h2>
        <p>
            @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
           
        </p>
    </div>
    <section class="content">
        <div class="container-fluid">
            <table id="example" class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenNXB)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Diachi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DienThoai)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenNXB)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Diachi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DienThoai)
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.MaNXB }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Xóa", "Delete", new { id = item.MaNXB }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </section>
</div>


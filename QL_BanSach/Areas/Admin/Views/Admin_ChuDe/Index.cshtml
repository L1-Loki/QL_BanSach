@model IEnumerable<QL_BanSach.Models.CHUDE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <h2>Quản lý chủ đề</h2>
        <p>
            @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
            <a class="btn btn-primary" href=" @Url.Action("index", "Admin_Sach")">Trở về</a>
        </p>
    </div>
    <section class="content">
        <div class="container-fluid">
            <table id="example" class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenChuDe)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenChuDe)
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.MaCD }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Xóa", "Delete", new { id = item.MaCD }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>

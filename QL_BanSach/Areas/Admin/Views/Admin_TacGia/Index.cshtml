@model IEnumerable<QL_BanSach.Models.TACGIA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml ";
}

<div class="content-wrapper">
    <div class="content-header">
        <h2>Quản lý Tác giả</h2>

        <p>
            @Html.ActionLink("Thêm tác giả", "Create", null, new { @class = "btn btn-primary" })
        </p>
    </div>
    <section class="content">
        <div class="container-fluid">
            <table id="example" class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Anhbia)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TenTG)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Diachi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tieusu)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Dienthoai)
                        </th>
                      
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="~/Content/images/avatars/@item.Anhbia" alt="Hình ảnh" style="width:100px" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenTG)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Diachi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tieusu)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Dienthoai)
                            </td>
                           
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.MaTG }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Xóa", "Delete", new { id = item.MaTG }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>

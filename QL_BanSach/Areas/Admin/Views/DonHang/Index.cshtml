@model IEnumerable<QL_BanSach.Models.DONDATHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <h2>Quản lý đơn hàng</h2>
        @* <p>
                @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })

            </p>*@
    </div>
    <section class="content">
        <div class="container-fluid">
            <table id="example" class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Mã đơn hàng
                        </th>
                        <th>
                            Tên sách
                        </th>
                        <th>
                            Hình ảnh
                        </th>
                        <th>
                            Tên khách hàng
                        </th>
                        <th>
                            Giá
                        </th>
                        <th>
                            Trạng thái thanh toán
                        </th>
                        <th>
                            Ngày đặt
                        </th>
                        <th>
                            Ngày giao
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaDonHang)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CHITIETDONTHANG.SACH.Tensach)
                            </td>
                            <td>
                                <img src="~/Content/images/@item.CHITIETDONTHANG.SACH.Anhbia" alt="Hình ảnh" style="width:100px" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.KHACHHANG.Ten)
                            </td>
                            <td>

                                @string.Format("{0:N0}", item.CHITIETDONTHANG.SACH.Giaban) VNĐ

                            </td>
                            <td>
                                @if (item.Dathanhtoan == true)
                                {
                                    <span>Đã thanh toán</span>
                                }
                                else
                                {
                                    <span>Chưa thanh toán</span>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ngaydat)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ngaygiao)
                            </td>

                            <td>
                                @Html.ActionLink("Đã giao hàng", "update", new { id = item.MaDonHang }, new { @class = "btn btn-primary" })

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </section>
</div>
<style>
    .dataTables_filter {
        margin-top: -20px;
        margin-left: 550px;
        width: 100%;
    }
</style>
<section class="section-content padding-y">
    <div class="container">


        <div class="row">
          
            <main class="col-md-10" style="margin-left:0px">
                <table id="example" style="width:120%;margin-left:10px">
                    <thead>
                        <tr>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="contacts-list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <article class="card card-product-list">
                                        <div class="row no-gutters">

                                            @*ảnh bìa*@
                                            <aside class="col-md-3">
                                                <a href="#" class="img-wrap">
                                                    <span class="badge badge-danger"> NEW </span>
                                                    <img src="~/Content/images/@item.Anhbia">
                                                </a>
                                            </aside> <!-- col.// -->
                                            @* thông tin *@
                                            <div class="col-md-6">
                                                <div class="info-main" style="padding: 50px;">
                                                    <a href="#" class="h5 title">@item.Tensach</a>
                                                    <div class="rating-wrap mb-2">
                                                        <ul class="rating-stars">
                                                            <li style="width:100%" class="stars-active">
                                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                            </li>
                                                            <li>
                                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                            </li>
                                                            <div class="label-rating">Số lượng còn @item.Soluongton</div>
                                                        </ul>

                                                    </div> <!-- rating-wrap.// -->
                                                </div> <!-- info-main.// -->
                                            </div> <!-- col.// -->
                                            <aside class="col-sm-3">
                                                <div class="info-aside" style="padding: 65px;">
                                                    <div class="price-wrap">
                                                        <span class="h5 price">@string.Format("{0:N0}", item.Giaban) VNĐ</span>
                                                        <small class="text-muted">VNĐ</small>
                                                    </div> <!-- price-wrap.// -->
                                                    @*<small class="text-warning">Paid shipping</small>

                                                        <p class="text-muted mt-3">Grand textile Co</p>*@
                                                    <p class="mt-3">
                                                        <div class="form-row  mt-4 ">
                                                            <a href="@Url.Action("ChiTiet", "ChiTietSP", new { id = item.Masach })" class="btn btn-outline-primary"> Chi tiết </a>
                                                            @*  <a href="#" class="btn btn-light"><i class="fa fa-heart"></i> Save </a>*@
                                                        </div>
                                                    </p>
                                                    @*
                                                        <label class="custom-control mt-3 custom-checkbox">
                                                            <input type="checkbox" class="custom-control-input">
                                                            <div class="custom-control-label">
                                                                Add to compare
                                                            </div>
                                                        </label>*@

                                                </div> <!-- info-aside.// -->
                                            </aside> <!-- col.// -->
                                        </div>
                                    </article>
                                    <!-- card-product .// -->
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </main> <!-- col.// -->

        </div>

    </div> <!-- container .//  -->
</section>

@model QL_BanSach.Models.Home_Model
@{
    ViewBag.Title = "Trang Chủ";
}

<style>
    .dataTables_filter {
        margin-top: -20px;
        margin-left: 489px;
        width: 100%;
    }

    .dataTables_length {
        display: none;
    }

    .dataTables_filter {
        display: none;
    }

    .pagination {
        margin-left: -95px;
    }
</style>
<div class="container">
    <!-- ========================= SECTION MAIN  ========================= -->
    <section class="section-main padding-y">
        <main class="card">
            <div class="card-body">

                <div class="row">
                    <aside class="col-lg col-md-3 flex-lg-grow-0">
                        <h4 class="card-title " style="margin-left: 81px;">Chủ đề</h4>
                        <nav class="nav-home-aside">
                            <table id="example1" style=" width:100%;margin-left:10px">
                                <thead>
                                    <tr>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody class="contacts-list">
                                    <ul class="menu-category">

                                        @foreach (var item in Model.list_CD_Sach)
                                        {
                                        <tr>
                                            <td>
                                                <ul class="menu-category  ">
                                                    <li>
                                                        @Html.ActionLink(item.TenChuDe, "ChuDe", "TacGia", new { @id = item.MaCD }, null)
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    }
                                        </ul>
                                    </tbody>
                                </table>
                            </nav>
                        </aside> <!-- col.// -->
                        <div class="col-md-9 col-xl-7 col-lg-7">

                            <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                            <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel" style="margin-top: 90px;">
                                <ol class="carousel-indicators">
                                    <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                    <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                    <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                                    <li data-target="#carousel1_indicator" data-slide-to="3"></li>
                                    <li data-target="#carousel1_indicator" data-slide-to="4"></li>
                                    <li data-target="#carousel1_indicator" data-slide-to="5"></li>
                                    <li data-target="#carousel1_indicator" data-slide-to="6"></li>
                                </ol>
                                <div class="carousel-inner" style="width:100%">
                                    <div class="carousel-item active">
                                        <img src="~/Content/images/Slider/01.jpg" alt="First slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/Content/images/Slider/02.jpg" alt="Second slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/Content/images/Slider/03.jpg" alt="Second slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/Content/images/Slider/04.jpg" alt="Second slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/Content/images/Slider/05.jpg" alt="Second slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/Content/images/Slider/06.jpg" alt="Second slide">
                                    </div>

                                </div>
                                <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                            <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->

                        </div> <!-- col.// -->
                        <div class="col-md d-none d-lg-block flex-grow-1">
                            <aside class="special-home-right">
                                <h6 class="bg-blue text-center text-white mb-0 p-2">Tác giả</h6>
                                @foreach (var item in Model.list_TacGia.Take(4))
                                {
                                    <div class="card-banner border-bottom">
                                        <div class="py-3" style="width:80%">
                                            <h6 class="card-title">@item.TenTG</h6>
                                            <a href="@Url.Action("Index","TacGia", new { id = item.MaTG})" class="btn btn-secondary btn-sm">Chi tiết </a>
                                        </div>
                                        <img src="~/Content/images/avatars/@item.Anhbia" height="80" class="img-bg">
                                    </div>
                                }
                            </aside>
                        </div> <!-- col.// -->
                    </div> <!-- row.// -->

                </div> <!-- card-body.// -->
            </main> <!-- card.// -->

        </section>
        <!-- ========================= SECTION MAIN END// ========================= -->
        <!-- =============== SECTION 1 =============== -->
        <section class="padding-bottom">
            <header class="section-heading heading-line">
                <h4 class="title-section text-uppercase">Sách bán nhiều</h4>
            </header>

            <div class="card card-home-category">
                <div class="row no-gutters">
                    <div class="col-md-3">
                        @foreach (var item in Model.list_Sach.Where(n => n.MaNXB == 1).Take(1))
                        {
                            <div class="home-category-banner bg-light-orange">
                                <h5 class="title">@item.Tensach</h5>
                                <p>@item.Mota </p>
                                <a href="@Url.Action("ChiTiet","ChiTietSP", new { id =item.Masach})" class="btn btn-outline-primary rounded-pill">Chi tiết</a>
                                <img src="~/Content/images/@item.Anhbia" class="img-bg">
                            </div>
                        }
                    </div> <!-- col.// -->
                    <div class="col-md-9">
                        <ul class="row no-gutters bordered-cols">
                            @foreach (var item in Model.list_Sach.Where(n => n.MaNXB == 1).Take(8))
                            {
                                <li class="col-6 col-lg-3 col-md-4">
                                    <a href="@Url.Action("ChiTiet","ChiTietSP", new { id =item.Masach})" class="item">
                                        <div class="card-body">
                                            <h6 class="title">@item.Tensach</h6>
                                            <img class="img-sm float-right" src="~/Content/images/@item.Anhbia">
                                            <p class="text-muted"> Số lượng: @item.Soluongton</p>
                                        </div>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- card.// -->
        </section>
        <!-- =============== SECTION 1 END =============== -->
        <!-- =============== SECTION ITEMS =============== -->
        <section class="padding-bottom-sm">

            <header class="section-heading heading-line">
                <h4 class="title-section text-uppercase">Sách</h4>
            </header>
            <table id="example" style="width: 100%; display: table-grid; table-layout: fixed; border-collapse: collapse;">
                <thead>
                    <tr>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    <div class="row row-sm">

                        @foreach (var item in Model.list_Sach)
                        {

                            <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                        <tr style=" display:inline-grid; width:14%">
                            <td>
                                <div href="#" class="card card-sm card-product-grid">
                                    <a href="@Url.Action("ChiTiet","ChiTietSP", new { id =item.Masach})" class="img-wrap"> <img src="~/Content/images/@item.Anhbia"> </a>
                                    <figcaption class="info-wrap">
                                        <a href="#" class="title">@item.Tensach</a>
                                        <div class="price mt-1">@string.Format("{0:N0}", item.Giaban) VNĐ</div> <!-- price-wrap.// -->
                                    </figcaption>
                                </div>
                            </td>
                        </tr>
        </div> <!-- col.// -->

    }

                        </div> <!-- row.// -->
                        </tbody>
                        </table>
                        </section>                        <!-- =============== SECTION ITEMS .//END =============== -->
                        </div>
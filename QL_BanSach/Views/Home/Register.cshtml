@model QL_BanSach.Models.KHACHHANG

@{
    ViewBag.Title = "Register";
}
<head>

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg p-3 mb-6 bg-white rounded">
                <h3>Đăng kí</h3>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">

                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Ho, new { htmlAttributes = new { @class = "form-control", placeholder = "Họ", Request } })
                        @Html.ValidationMessageFor(model => model.Ho, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên", Request } })
                        @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email", Request } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-md-12">
                        @Html.EditorFor(model => model.DiachiKH, new { htmlAttributes = new { @class = "form-control", placeholder = "Địa chỉ", Request } })
                        @Html.ValidationMessageFor(model => model.DiachiKH, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-md-12">
                        @Html.EditorFor(model => model.DienthoaiKH, new { htmlAttributes = new { @class = "form-control", placeholder = "Số điện thoại", Request } })
                        @Html.ValidationMessageFor(model => model.DienthoaiKH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="input-group col-12">
                        @Html.PasswordFor(model => model.Matkhau, new { @class = "form-control", placeholder = "Mật khẩu", Request })
                    </div>
                    @Html.ValidationMessageFor(model => model.Matkhau, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">

                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Ngaysinh, new { htmlAttributes = new { @class = "form-control", placeholder = "Năm-Tháng-Ngày" } })
                        @Html.ValidationMessageFor(model => model.Ngaysinh, "", new { @class = "text-danger" })
                    </div>


                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12">
                        <input type="submit" value="Đăng kí" class="btn btn-primary btn-block" />
                    </div>
                </div>
                <p class="text-center mt-4">Bạn đã có tài khoản ? <a href="/Home/Login">Đăng nhập</a></p>
            </div>
        </div>
    </div>
}
@*<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>*@
<script>
    $(function () {
        $("#Ngaysinh").datepicker({
            dateFormat: "yy-mm-dd",
            changeMonth: true,
            changeYear: true,
            yearRange: "1900:c"
        });
    });
</script>
